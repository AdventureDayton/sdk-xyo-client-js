{
  "root": true,
  "extends": [
    "@xylabs"
  ],
  "plugins": [
    "eslint-plugin-tsdoc"
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    }
  },
  "rules": {
    "import/no-internal-modules": [
      "warn", {
        "allow": [
          "lodash/*"
        ]
      }
    ],
    "tsdoc/syntax": "warn"
  }
}
